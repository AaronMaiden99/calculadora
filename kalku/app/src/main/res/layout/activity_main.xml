<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Pantalla de la calculadora -->
    <TextView
        android:id="@+id/pantalla"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="0"
        android:textSize="48sp"
        android:gravity="center"/>

    <!-- Botonera de 4x4 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:rowCount="4"
        android:columnCount="4">

        <Button
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:textSize="30sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/num2"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/num3"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/opDIVISION"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="/"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#F0A00A"/>
        <Button
            android:id="@+id/num4"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/num5"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/num6"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/opSUMA"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="+"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#F0A00A"/>
        <Button
            android:id="@+id/num7"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/num8"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/num9"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/opRESTA"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="-"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#F0A00A"/>
        <Button
            android:id="@+id/opAC"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="AC"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#F2255A"/>
        <Button
            android:id="@+id/num0"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" />
        <Button
            android:id="@+id/opIGUAL"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="="
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#F2255A"/>
        <Button
            android:id="@+id/opMULTIPLICACION"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="*"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#F0A00A"/>

        <!-- Agrega más botones aquí para completar la matriz 4x4 -->

    </GridLayout>
</LinearLayout>
